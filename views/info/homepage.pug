    script(src='/js/homejs/jquery-3.2.1.min.js')
    script(src='/js/homejs/jquery-migrate.min.js')
    script(src='/js/homejs/bootstrap-3.3.7.min.js')
    script(src='/js/homejs/hoverIntent.js')
    script(src='/js/homejs/superfish.min.js')
    script(src='/js/homejs/morphext.min.js')
